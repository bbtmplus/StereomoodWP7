<UserControl x:Class="TuneYourMood.BuyNowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="168" d:DesignWidth="480">

    <Grid Background="Black" Height="168" Width="480">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Margin="0,20,0,0">
            <TextBlock   TextWrapping="Wrap" FontSize="28" Padding="10"
                   Text="Do not forget to get the full version!" />
        </Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnBuyNow" Content="Buy Now" Click="buyNowClicked" />
            <Button x:Name="btnContinueTrial" Content="Continue Trial" Click="continueTrialClicked" />
        </StackPanel>
    </Grid>
</UserControl>
